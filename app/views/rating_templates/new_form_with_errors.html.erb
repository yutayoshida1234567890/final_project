<% if @rating.present? %>
  <% if @rating.errors.any? %>
    <% @rating.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new rating
</h1>


<hr>

<form action="/create_rating" method="post">

  <input type="hidden" name="user_id" value="<%= current_user.id %>">

  <div class="form-group">
    <label for="restaurant_id">
      Restaurant
    </label>

    <%= select_tag(:restaurant_id, options_from_collection_for_select(Restaurant.all, :id, :address, @rating.restaurant_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="rating_scale">
      Rating scale
    </label>

    <input type="text" id="rating_scale" name="rating_scale" class="form-control" value="<%= @rating.rating_scale %>">
  </div>

  <div class="form-group">
    <label for="occasion">
      Occasion
    </label>

    <input type="text" id="occasion" name="occasion" class="form-control" value="<%= @rating.occasion %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create rating
  </button>
</form>

<hr>

<a href="/ratings">
  Go back
</a>
