<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Events

    <a data-toggle="collapse" href="#restaurant_events_new_form">
      Add event
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @restaurant.events.each do |event| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/events/<%= event.id %>">
          <%= event.venue_id %>
        </a>

        <a href="/delete_event_from_venue/<%= event.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="restaurant_events_new_form">
        <%= render partial: "restaurant_templates/restaurant_events_new_form" %>
      </div>
    </div>

  </ul>
</div>
