<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Participants

    <a data-toggle="collapse" href="#event_participants_new_form">
      Add participant
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @event.participants.each do |participant| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/participants/<%= participant.id %>">
          <%= participant.event_id %>
        </a>

        <a href="/delete_participant_from_event/<%= participant.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="event_participants_new_form">
        <%= render partial: "event_templates/event_participants_new_form" %>
      </div>
    </div>

  </ul>
</div>
