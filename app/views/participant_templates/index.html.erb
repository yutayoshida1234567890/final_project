<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All participants
    </h1>

    <a href="/participants/new" class="btn btn-block btn-outline-secondary">
      Add a new participant
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Event
        </th>

        <th>
          User
        </th>

        <th>
          Location
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @participants.each do |participant| %>
      <tr>
        <!-- Display participant.id start -->
        <td>
          <%= participant.id %>
        </td>
        <!-- Display participant.id end -->

        <!-- Display participant.event_id start -->
        <td>
          <%= participant.event_id %>
        </td>
        <!-- Display participant.event_id end -->

        <!-- Display participant.user_id start -->
        <td>
          <%= participant.user_id %>
        </td>
        <!-- Display participant.user_id end -->

        <!-- Display participant.location start -->
        <td>
          <%= participant.location %>
        </td>
        <!-- Display participant.location end -->

        <!-- Display participant.created_at start -->
        <td>
          <%= time_ago_in_words(participant.created_at) %> ago
        </td>
        <!-- Display participant.created_at end -->

        <!-- Display participant.updated_at start -->
        <td>
          <%= time_ago_in_words(participant.updated_at) %> ago
        </td>
        <!-- Display participant.updated_at end -->

        <td>
          <a href="/participants/<%= participant.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
