<form action="/create_rating_from_restaurant" method="post">

  <input type="hidden" name="user_id" value="<%= current_user.id %>">

  <input type="hidden" name="restaurant_id" value="<%= @restaurant.id %>">

  <div class="form-group">
    <label for="rating_scale">
      Rating scale
    </label>

    <input type="text" id="rating_scale" name="rating_scale" class="form-control" value="<%= @rating.rating_scale %>">
  </div>

  <div class="form-group">
    <label for="occasion">
      Occasion
    </label>

    <input type="text" id="occasion" name="occasion" class="form-control" value="<%= @rating.occasion %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create rating
  </button>
</form>
