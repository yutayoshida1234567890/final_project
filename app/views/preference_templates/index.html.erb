<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All preferences
    </h1>

    <a href="/preferences/new" class="btn btn-block btn-outline-secondary">
      Add a new preference
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "preference_templates/preferences_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Cuisine
        </th>

        <th>
          Preference scale
        </th>

        <th>
          Dietary restriction
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @preferences.each do |preference| %>
      <tr>
        <td>
          <%= preference.id %>
        </td>

        <td>
          <% if preference.user.present? %>
            <a href="/users/<%= preference.user.id %>">
              <%= preference.user.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= preference.cuisine %>
        </td>

        <td>
          <%= preference.preference_scale %>
        </td>

        <td>
          <%= preference.dietary_restriction %>
        </td>

        <td>
          <%= time_ago_in_words(preference.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(preference.updated_at) %> ago
        </td>

        <td>
          <a href="/preferences/<%= preference.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @preferences, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
